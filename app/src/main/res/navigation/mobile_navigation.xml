<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.teraculus.lingojournalandroid.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_entryDetails"
            app:destination="@id/entryDetails" >
            <argument
                android:name="id"
                android:defaultValue="@null" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.teraculus.lingojournalandroid.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.teraculus.lingojournalandroid.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <activity
        android:id="@+id/entryDetails"
        android:name="com.teraculus.lingojournalandroid.AddNoteActivity"
        android:label="activity_entry_details"
        tools:layout="@layout/activity_entry_details" >
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </activity>
</navigation>