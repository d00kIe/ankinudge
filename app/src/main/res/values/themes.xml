<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LingoJournal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Important for Jetpack Compose dialog to be full width -->
        <item name="android:dialogTheme">@style/Theme.DialogFullScreen</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#0c5b8f</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0c5b8f</item>
        <item name="colorOnSecondary">#ffffff</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#ffffff</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorSurface">#feffff</item>
        <item name="colorOnSurface">#000000</item>

