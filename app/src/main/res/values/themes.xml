<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Important for Jetpack Compose dialog to be full width -->
        <item name="android:dialogTheme">@style/Theme.DialogFullScreen</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#1565c0</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1565c0</item>
        <item name="colorSecondaryVariant">#003c8f</item>
        <item name="colorOnSecondary">#ffffff</item>


        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->

    </style>

    <style name="Theme.DialogFullScreen" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>